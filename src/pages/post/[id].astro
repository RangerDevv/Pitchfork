---

import Layout from '../../layouts/Layout.astro';
import { appwriteDatabases , appwriteStorage, Products } from '../../lib/appwrite';

// get the ID from the URL
let pid = Astro.params.id!

// get the product from the database
const entries = (await appwriteDatabases.getDocument(
	'646538e35dd17306c589',
    '646538eeeface7a4cd39',
	pid
)) as unknown as Products;

---

<Layout title="Post">
<div class="flex flex-col md:flex-row gap-5 justify-around p-10 md:p-0 md:pt-24">
    <div class="flex flex-row gap-6">
        <img src={entries.Icon} alt={entries.Name} class="w-24 h-auto" />
        <div>
            <p class="text-2xl">{entries.Name}</p>
            <p>{entries.Tagline}</p>
            <p>By: {entries.Author}</p>
        </div>
    </div>
    <a href={entries.Link} class="pt-5">
    <button class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded h-10">
        Visit Website
    </button>
    </a>
</div>

<p class="p-16 md:pl-48 md:pt-10 w-full md:w-9/12">
    {entries.Description}
</p>

</Layout>